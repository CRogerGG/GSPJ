<div class="modal fade" id="modalCliente" tabindex="-1" role="dialog" aria-labelledby="modal-form" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
       <div class="modal-body p-0">
         <div class="card card-plain">
          <div class="card-header pb-0 text-left">
            <h5 class="titulo-mod"> </h5>
            <p class="mb-0">Ingrese los datos correspondientes</p>
          </div>
          <div class="card-body">
            <form id="formCliente" role="form" class="text-start">
              <input id="id" hidden>
              
              <label class="form-label mb-0 is-required">Nombre</label>
              <div class="input-group input-group-outline mb-3">
                <!--<label class="form-label">Nombre</label>-->
                <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Nombre" required>
              </div>

              <div class="row">
                  <div class="col-6 d-flex align-items-center">
                      <label class="form-label mb-0 is-required">Apellido paterno</label>
                  </div>
                  <div class="col-6 d-flex align-items-center px-1">
                      <label class="form-label mb-0 is-required">Apellido materno</label>
                  </div>
              </div>
              <div class="d-flex align-items-center">
                  <div class="input-group input-group-outline mb-3"> <!-- my-3 margen superior mb-3 margen inferior -->
                      <input type="text" class="form-control" name="apaterno" id="apaterno" placeholder="Apellido paterno" required>
                  </div>
                  &nbsp;&nbsp;
                  <div class="input-group input-group-outline mb-3">
                      <input type="text" class="form-control" name="amaterno" id="amaterno" placeholder="Apellido materno" required>
                  </div>
              </div>

              <label class="form-label mb-0 is-required">Domicilio</label>
              <div class="input-group input-group-outline mb-3">
                <input type="text" class="form-control" name="domicilio" id="domicilio" placeholder="Domicilio" required>
              </div>

              <div class="row">
                  <div class="col-6 d-flex align-items-center">
                      <label class="form-label mb-0 is-required">Ciudad</label>
                  </div>
                  <div class="col-6 d-flex align-items-center px-1">
                      <label class="form-label mb-0 is-required">Estado</label>
                  </div>
              </div>
              <div class="d-flex align-items-center">
                  <div class="input-group input-group-outline mb-3"> <!-- my-3 margen superior mb-3 margen inferior -->
                      <input type="text" class="form-control" name="ciudad" id="ciudad" placeholder="Ciudad" required>
                  </div>
                  &nbsp;&nbsp;
                  <div class="input-group input-group-outline mb-3">
                      <input type="text" class="form-control" name="estado" id="estado" placeholder="Estado" required>
                  </div>
              </div>

              <div class="row">
                  <div class="col-6 d-flex align-items-center">
                      <label class="form-label mb-0 is-required">Fecha de nacimiento</label>
                  </div>
                  <div class="col-6 d-flex align-items-center px-1">
                      <label class="form-label mb-0">CURP</label>
                  </div>
              </div>                  
                  <div class="d-flex align-items-center">
                      <div class="input-group input-group-outline mb-3"> <!-- my-3 margen superior mb-3 margen inferior -->
                          <input type="date" class="form-control" name="fecha_nacimiento" id="fecha_nacimiento" required>
                      </div>
                      &nbsp;&nbsp;
                      <div class="input-group input-group-outline mb-3">
                          <input type="text" class="form-control" name="curp" id="curp" placeholder="CURP" maxlength="18">
                      </div>
                  </div>

                  <div class="row">
                      <div class="col-6 d-flex align-items-center">
                          <label class="form-label mb-0">Teléfono fijo</label>
                      </div>
                      <div class="col-6 d-flex align-items-center px-1">
                          <label class="form-label mb-0">Teléfono celular</label>
                      </div>
                  </div>
                  <div class="d-flex align-items-center">
                      <div class="input-group input-group-outline mb-3"> <!-- my-3 margen superior mb-3 margen inferior -->
                          <input type="text" class="form-control" name="tel_fijo" id="tel_fijo" placeholder="Teléfono fijo" maxlength="10">
                      </div>
                      &nbsp;&nbsp;
                      <div class="input-group input-group-outline mb-3">
                          <input type="text" class="form-control" name="tel_celular" id="tel_celular" placeholder="Teléfono celular" maxlength="10">
                      </div>
                  </div>
                  
              <label class="form-label mb-0">Email</label>
              <div class="input-group input-group-outline mb-3"> <!-- my-3 margen superior mb-3 margen inferior -->
                <input type="email" class="form-control" name="email" id="email" placeholder="Email">
              </div>
              
              <label class="form-label mb-0">Nacionalidad</label>
              <div class="input-group input-group-outline mb-3"> <!-- my-3 margen superior mb-3 margen inferior -->
                <input type="text" class="form-control" name="nacionalidad" id="nacionalidad" placeholder="Nacionalidad">
